<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="default" namespace="/struts" extends="struts-default">

		<action name="index">
			<result>/views/struts/index.jsp</result>
		</action>

		<action name="users" class="users">
			<result name="success">/views/struts/users.jsp</result>
		</action>

		<action name="createUser" class="users" method="createUser">
			<result type="redirectAction">
				<param name="actionName">users</param>
			</result>
		</action>

		<action name="editUser" class="users" method="edit">
			<result type="redirectAction">
				<param name="actionName">users</param>
			</result>
		</action>

		<action name="deleteUser" class="users" method="delete">
			<result type="redirectAction">
				<param name="actionName">users</param>
			</result>
		</action>

	</package>

</struts>