<project>
	<!-- Common property definitions and tasks valid for all MBNEU projects.
	Each MBNEU Build file should import this file at the very beginning.
	-->
	
	<property file="build.properties"/>
	<property name="absolute.prj.dir" value="${local.project.dir}" />
	
	<!-- MBNEU subprojects -->
	<property name="server.prj.dir" value="..\ws-javaframeworks-server" />
	<property name="pom.prj.dir" value="..\ws-javaframeworks-pom" />
	<property name="persistence.prj.dir" value="..\ws-javaframeworks-persistence" />
	
	<property name="mvn.skip.test" value="-Dmaven.test.skip=true" />

	<!-- Environment -->
	<property name= "envOS" value="${local.os}" />
	<property environment="env" />

	<property name="product.name" value="${app.name}" />
	<property name="product.vendor" value="${app.vendor}" />

	<property name="build.compiler" value="javac1.7" />
	<property name="ant.build.javac.target" value="1.7" />
	<property name="ant.build.javac.source" value="1.7" />
	<property name="compile.debug" value="true" />

	<!-- target folder for intermediate storage -->
	<property name="target.dir" value="target" />

	<!-- compile destination -->
	<property name="bin.dir" value="${target.dir}/bin" />
	<property name="bin.test.dir" value="${target.dir}/bin-test" />
	<!-- build destination -->
	<property name="dist.dir" value="${target.dir}/dist" />
	
	<property name="server.webapp.dir" value="${server.prj.dir}\src\main\webapp" />
	<property name="war.dir" value="${server.prj.dir}\${target.dir}" />

</project>
